<div class="fixed inset-0 -z-10 pointer-events-none h-screen">
  {% for i in range(1, 50) %}
    <div
      class="absolute text-white opacity-75 animate-fall"
      style="
        top: {{ (i * 2) % 100 }}%;
        left: {{ (i * 7) % 100 }}%;
        font-size: {{ (i % 3) + 1 }}rem;
        animation-duration: {{ (i % 3) + 3 }}s;
        animation-delay: {{ (i % 5) }}s;
      "
    >
      {% set snowflakes = ['❄', '*', '✦', '✧', '✺'] %}
      {{ snowflakes[i % snowflakes.length] }}
    </div>
  {% endfor %}
</div>
