  <!-- <div class="absolute inset-0 -z-50 bg-base-200"></div> -->
  <div class="hero-content px-5 py-5 lg:py-10 w-full flex-col md:flex-row" id="events">
    <div class="max-w-md lg:max-w-2xl text-center md:text-start">
      <h1 class="text-3xl lg:text-5xl font-bold">
        Events
      </h1>
      <p class="mt-4 text-md/relaxed">
        Redbrick hosts a variety of events throughout the year, from LAN parties to workshops and talks...
      </p>
    </div>
    <div class="relative -z-20 perspective-1600 w-full md:w-1/2 aspect-square">
      <img class="hero-card bottom-[62%] left-[12%] h-[32%]"
        src="{{ site.home.events.graphic.image1.src }}"
        alt="{{ site.home.events.graphic.image1.alt }}" data-events-card />
      <img class="hero-card bottom-[20%] left-[35%] h-[70%]"
        src="{{ site.home.events.graphic.image2.src }}"
        alt="{{ site.home.events.graphic.image2.alt }}" data-events-card />
      <img class="hero-card bottom-[10%] left-[10%] h-[35%]"
        src="{{ site.home.events.graphic.image3.src }}"
        alt="{{ site.home.events.graphic.image3.alt }}" data-events-card />
      <img class="hero-card bottom-[10%] left-[50%] h-[60%]"
        src="{{ site.home.events.graphic.image4.src }}"
        alt="{{ site.home.events.graphic.image4.alt }}" data-events-card />
    </div>
    {% include "home/sections/events-carousel.njk" %}
  </div>
</section>
<script>
  gsap.from("[data-events-card]", {
    opacity: 0,
    scale: 0,
    y: 50,
    delay: 0.8,
    ease: "elastic(1,1)",
    duration: 1.25,
    stagger: 0.2
  })
</script>
