{% from "components/sidebar.njk" import sidebar %}

<div class="drawer-side overflow-none">
  <label for="drawer" aria-label="close sidebar" class="drawer-overlay"></label>
  <aside class="p-4 pt-16 h-screen w-80 max-w-screen overflow-auto bg-base-100 bg-opacity-90 backdrop-blur border-r border-white/5 shadow-md"> 
    <nav tabindex="0" class="menu menu-sm">
      <li>
        <header class="menu-title">Redbrick</header>
        {% for link in navbar %}
        <li><a href="{{ link.url }}">{{ link.name }}</a></li>
        {% endfor %}
      </li>
      {% if "/open-governance/" in page.url %}
        {{ sidebar(header="Open Governance", data=governance, current=page.url) }}
      {% elif "/blog/" in page.url %}
        {{ sidebar(header="Blog", data=blog, current=page.url) }}
      {% endif %}
    </nav>
  </aside>
</div>