---
layout: layout/base.njk
pagination:
  data: blog
  size: 1
  alias: post
permalink: /{{ post.url }}/
eleventyComputed:
  title: "{{ post.title }}"
---
{% from "components/sidebar.njk" import sidebar %}

<div class="md:drawer-open grid grid-cols-4 gap-4 bg-base-100 min-h-screen">
  <aside class="sticky hidden lg:block left-0 top-16 h-screen p-5 pb-16 overflow-auto bg-base-100 border-r border-white/5">
    <nav class="menu">
      {{ sidebar(header="Blog", data=blog, current=page.url) }}
    </nav>
  </aside>
  <main class="col-span-4 md:col-span-3 lg:col-span-2">
    <article class="p-10 pb-20">
      <div class="inline-block pb-8">
        {% for tag in post.tags %}
        <span class="badge">#{{ tag }}</span>
        {% endfor %}
      </div>
      <h1 class="text-3xl font-bold">{{ post.title }}</h1>
      <div class="inline-block py-2">
        {% if post.author %}
        <span class="font-mono badge badge-lg badge-ghost my-2 mr-2">@{{ post.author }}</span>
        {% endif %}
        {% if post.created %}
        <span class="badge badge-lg badge-ghost">ğŸ“† {{ post.created | readable }}</span>
        {% endif %}
        <span class="badge badge-lg badge-ghost">ğŸ¿ {{ post.content | readingTime }}</span>
      </div>
      <div class="divider"></div>
      <div class="prose min-w-full">
        {{ post.content | prose | safe }}
      </div>
    </article>
  </main>
  <aside class="sticky hidden md:block right-0 top-16 h-screen p-5 overflow-auto bg-base-100">
    <nav class="menu">
      <li>
        <header class="menu-title">In this post</header>
        <ul>
          {{ post.content | prose | toc | safe }}
        </ul>
      </li>
    </nav>
  </aside>
</div>